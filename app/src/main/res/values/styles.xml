<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="layout_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="layout_match">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="layout_width_match">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="padding_layout_match" parent="layout_match">
        <item name="android:padding">16dp</item>
    </style>

    <style name="button_flat" parent="layout_wrap">
        <item name="android:background">@color/button_ok</item>
    </style>

    <style name="button_rectangle" parent="layout_width_match">
        <item name="android:background">@color/button_ok</item>
    </style>

    <style name="list_item_ll" parent="layout_width_match">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/activated_background</item>
    </style>

    <style name="list_item_rl" parent="layout_width_match">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/activated_background</item>
    </style>

</resources>
